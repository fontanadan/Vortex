FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
solvers
{

    "(rho|rhoU|rhoE)"
    {
        solver          diagonal;
    }

    U
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        nSweeps         2;
        tolerance       1e-09;
        relTol          0.01;
    }

    "(h|e)"
    {
        $U;
        tolerance       1e-10;
        relTol          0;
    }


    "(nuTilda|k|omega)"
    {
        solver          smoothSolver;
        smoother        DILUGaussSeidel;
       // nSweeps         2;
       // tolerance       1e-9;
       // relTol          0.01;
    }

